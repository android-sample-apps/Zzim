    <style name="ToolBarTitle">
        <item name="android:fontFamily">@font/noto_sans_cj_kkr_bold</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:letterSpacing">-0.03</item>
    </style>

    <style name="Banner">
        <item name="android:fontFamily">@font/noto_sans_cj_kkr_regular</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:letterSpacing">-0.03</item>
    </style>

    <style name="ProductSale">
        <item name="android:fontFamily">@font/noto_sans_cj_kkr_bold</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/watermelon</item>
        <item name="android:letterSpacing">-0.03</item>
    </style>

    <style name="ProductPrice">
        <item name="android:fontFamily">@font/noto_sans_cj_kkr_bold</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:letterSpacing">-0.03</item>
    </style>

    <style name="ProductName">
        <item name="android:fontFamily">@font/noto_sans_cj_kkr_regular</item>
        <item name="android:textSize">11sp</item>
        <item name="android:textColor">@color/brownish_grey</item>
    </style>

    <style name="ProductNewBadge">
        <item name="android:fontFamily">@font/noto_sans_cj_kkr_regular</item>
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="ProductBuying">
        <item name="android:fontFamily">@font/noto_sans_cj_kkr_regular</item>
        <item name="android:textSize">11sp</item>
        <item name="android:textColor">@color/brownish_grey</item>
    </style>
